extends ../../layout.pug

block content
    .content-header
        .container-fluid
            .row.mb-3.mt-3
                .col-sm-6
                    h1.m-0.text-dark All Stores
                .col-sm-6
                    a.btn.btn-success.float-right(href="/dashboard/stores/add")
                        i.fas.fa-plus
                        |  Add New Store
    .content
        .container-fluid
            .row
                .col-12
                    .card
                        .card-header
                            h3.card-title All Stores
                            form(action=`/dashboard/stores/searchResult`, method="post")
                                input(type="hidden" name="_csrf" value=`${csrfToken}`)
                                .input-group.input-group-sm.float-right(style="width: 150px;")
                                    if property
                                        input.form-control.float-right(type="text" name="table_search" placeholder="Search")
                                    if tbSearch
                                        input.form-control.float-right(type="text", value = `${table_search}`, name="table_search" placeholder="Search")
                                    .input-group-append
                                    button.btn.btn-default(type="submit")
                                        i.fas.fa-search
                        .card-body.table-responsive.p-0
                            table.table.table-hover.text-nowrap
                                thead
                                    tr

                                    th Store Name
                                    th Status
                                    th Edit
                                    th Delete
                                tbody
                                    if tbSearch
                                        for tb in tbSearch
                                            tr
                                                td #{tb.storeEnglish}
                                                td 
                                                    span.tag.tag-success Active
                                                td
                                                    a.btn-sm.btn-primary(href=`/dashboard/stores/edit/${tb.id}`)
                                                        i.far.fa-edit
                                                        |  Edit
                                                td
                                                    form(action=`/dashboard/stores/delete/${tb.id}`, method="post")
                                                        input(type="hidden" name="_csrf" value=`${csrfToken}`)
                                                        button.btn-sm.btn-danger(type="submit")
                                                            i.fas.fa-trash-alt
                                                            |  Delete
                                    if propertys
                                        for property in propertys.docs
                                            tr
                                            td #{ property.nameEnglish }
                                            td
                                                span.tag.tag-success Active
                                            td
                                                a.btn-sm.btn-primary(href=`/dashboard/propertys/edit/${property.id}`)
                                                    i.far.fa-edit
                                                    |  Edit
                                            td
                                                form(action=`/dashboard/propertys/delete/${property.id}`, method="post")
                                                    input(type="hidden" name="_csrf" value=`${csrfToken}`)
                                                    button.btn-sm.btn-danger(type="submit")
                                                        i.fas.fa-trash-alt