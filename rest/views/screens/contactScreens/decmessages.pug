extends ../../layout.pug

block content
    .content-header
        .container-fluid
            .row.mb-3.mt-3
                .col-sm-6

                    h1.m-0.text-dark 
                        | Messages
                .col-sm-6
                        a.btn.btn-success.float-right(href="/dashboard/messages")
                            
                            |  New Messages

    .content
        .container-fluid
            if successes
                for success in successes
                    div.alert.alert-success #{ success }
            if errors
                for error, i in errors
                    div.alert.alert-danger #{ error.message }
            .row
                .col-12
                    .card
                        .card-body.table-responsive.p-0
                            .table-responsive
                                table.table.table-hover
                                    thead

                                        th Sent:
                                        th Name
                                        th Mobile Number 
                                        th Email 
                                        th(colspan="2") Message 
                                    tbody
                                        if dataProvided
                                            - var dataArray = dataProvided.docs
                                            - var hasPrev = dataProvided.hasPrevPage 
                                            - var hasNext = dataProvided.hasNextPage 
                                            - var totalPages = dataProvided.totalPages 
                                            - var pages = 1
                                            - var page = dataProvided.page 
                                            - var num = (page-1)*dataProvided.limit+1
                                            - var timeDiff
                                            - var timeDiffStr
                                            for dat in dataArray
                                                -  timeDiff = (dateNow - dat.createdAt)/1000
                                                if timeDiff < 60
                                                    - timeDiffStr = Math.floor(timeDiff) + " seconds ago"
                                                else if timeDiff < 3600 && timeDiff > 60
                                                    - timeDiffStr = Math.floor(timeDiff/60) + " minutes ago"
                                                else if timeDiff < 86400 && timeDiff > 3600
                                                    - timeDiffStr = Math.floor(timeDiff/3600) + " hours ago"
                                                else if timeDiff < 259200 && timeDiff > 86400
                                                    - timeDiffStr = Math.floor(timeDiff/86400) + " days ago"
                                                else if timeDiff > 259200 
                                                    - timeDiffStr = dat.createdAt.toDateString()
                                                tr
                                                    td #{ timeDiffStr }
                                                    td #{ dat.name_contact} #{dat.lastname_contact}
                                                    td #{dat.contactMobileNo }
                                                    td #{ dat.email_contact }

                                    
                                                    td(colspan="2" style="word-break: break-all;") #{ dat.message_contact }



                        .card-footer.clearfix
                            ul.pagination.pagination-sm.m-0.float-right
                                if hasPrev
                                    li.page-item
                                        a.page-link(href=href=`/dashboard/booking?p=${page - 1}`) «
                                if totalPages > 1
                                    while pages  < 3            
                                        li.page-item
                                            if pages === page
                                                a.page-link.active( style="background-color:rgba(0,0,0,0.1); color:black;" )= pages
                                            else
                                                a.page-link.active( href=`/dashboard/booking?p=${pages}`)= pages

                                        - pages++    

                                if hasNext
                                    li.page-item
                                        a.page-link(href=`/dashboard/booking?p=${page + 1}`) »                            