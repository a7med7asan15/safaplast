extends ../../layout.pug


block content
        .content-header
            .container-fluid
                .row.mb-3.mt-3
                .col-sm-6
                    h1.m-0.text-dark All Brokers
        .content
            .container-fluid
                if successes
                    for success in successes
                        div.alert.alert-success #{ success }
                if errors
                    for error, i in errors
                        div.alert.alert-danger #{ error.message }
                .row
                    .col-5
                        .card
                            .card-header
                                h3.card-title Broker Info
                            form#addDataForm(action="/dashboard/brokers/add" method="post" role="form")
                                .card-body.row
                                    input(type="hidden" name="_csrf" value=`${csrfToken}`)
                                    .form-group.col-md-10
                                        label(for="name") Broker Name [ Arabic ]
                                        input.form-control#name(type="text", name="name", placeholder="Enter Name")
                                    .form-group.col-md-10
                                        label(for="mobileNo") Broker Mobile Number
                                        input.form-control#mobileNo(type="text", name="mobileNo", placeholder="Enter Mobile Number")
                                    
                                .card-footer
                                    button.btn.btn-primary.float-right(type="submit") Add Broker
                    .col-7
                        .card
                            .card-header
                                h3.card-title All Brokers 
                                .card-tools
                                form(action=`/dashboard/brokers/searchResult`, method="post")
                                    input(type="hidden" name="_csrf" value=`${csrfToken}`)
                                    .input-group.input-group-sm.float-right(style="width: 150px;")
                                        if dataProvided
                                            input.form-control.float-right(type="text", name="table_search", placeholder="Search")
                                        if tbSearch
                                            input.form-control.float-right(type="text", value = `${table_search}`, name="table_search", placeholder="Search")
                                        .input-group-append
                                        button.btn.btn-default(type="submit")
                                            i.fas.fa-search
                            .card-body.table-responsive.p-0
                                table.table.table-hover.text-nowrap
                                    thead
                                        tr
                                            th ID
                                            th Name 
                                            th Mobile Number 
                                            th Edit
                                            th delete
                                    tbody
                                        if tbSearch
                                            - var num = 1
                                            for tb in tbSearch
                                                tr
                                                    td #{num++}
                                                    td #{tb.name}
                                                    td #{tb.mobileNo}
                                                    td
                                                        a.btn-sm.btn-primary(href=`/dashboard/brokers/edit?id=${tb.id}`)
                                                            i.far.fa-edit
                                                            |  Edit
                                                    td
                                                        form(action=`/dashboard/brokers/delete?id=${tb.id}`, method="post")
                                                            input(type="hidden" name="_csrf" value=`${csrfToken}`)
                                                            button.btn-sm.btn-danger(type="submit")
                                                                i.fas.fa-trash-alt
                                                                |  Delete
                                        
                                        if dataProvided
                                            - var dataArray = dataProvided.docs
                                            - var hasPrev = dataProvided.hasPrevPage 
                                            - var hasNext = dataProvided.hasNextPage 
                                            - var totalPages = dataProvided.totalPages 
                                            - var pages = 1
                                            - var page = dataProvided.page 
                                            - var num = (page-1)*dataProvided.limit+1
                                            for dat in dataArray
                                                tr
                                                    td #{num++}
                                                    td #{dat.name}
                                                    td #{dat.mobileNo}
                                                    td
                                                        a.btn-sm.btn-primary(href=`/dashboard/brokers/edit?id=${dat.id}`)
                                                            i.far.fa-edit
                                                            |  Edit
                                                    td
                                                        form(action=`/dashboard/brokers/delete?id=${dat.id}`, method="post")
                                                            input(type="hidden" name="_csrf" value=`${csrfToken}`)
                                                            button.btn-sm.btn-danger(type="submit")
                                                                i.fas.fa-trash-alt
                            .card-footer.clearfix
                                ul.pagination.pagination-sm.m-0.float-right
                                    if hasPrev
                                        li.page-item
                                            a.page-link(href=href=`/dashboard/brokers?p=${page - 1}`) «
                        
                                    if totalPages > 1
                                        while pages  < 3            
                                            li.page-item
                                                if pages === page
                                                    a.page-link.active( style="background-color:rgba(0,0,0,0.1); color:black;" )= pages
                                                else
                                                    a.page-link.active( href=`/dashboard/brokers?p=${pages}`)= pages
                                                    
                                            - pages++    
                               
                                    if hasNext
                                        li.page-item
                                            a.page-link(href=`/dashboard/brokers?p=${page + 1}`) »
block scripts 
        script(src="/static/vendor/js/addBroker.js", type="text/javascript")